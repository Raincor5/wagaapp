<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodGuide"
        tools:targetApi="31">
        <activity
            android:name=".IngredientDishesActivity"
            android:exported="false"
            android:label="@string/title_activity_ingredient_dishes"
            android:theme="@style/Theme.FoodGuide" />
        <activity
            android:name=".DishIngredientsActivity"
            android:exported="false"
            android:label="DishIngredientsActivity"
            android:theme="@style/Theme.FoodGuide" />
        <activity
            android:name=".IngredientsActivity"
            android:exported="false"
            android:label="@string/title_activity_ingredients"
            android:theme="@style/Theme.FoodGuide" />
        <activity
            android:name=".DishesActivity"
            android:exported="false"
            android:label="@string/title_activity_dishes"
            android:theme="@style/Theme.FoodGuide" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FoodGuide">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>